        <!-- Three -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <section id="three" class="wrapper style4 fade-up">
                <div class="inner">
                    <h2>Candidate Registration</h2>
                    <div class="split style1">
                        <section>
                            <form method="post" action="#">
                                <div class="field half first">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name)
                                </div>
                                <div class="field half">
                                    @Html.LabelFor(m => m.BirthName)
                                    @Html.TextBoxFor(m => m.BirthName)
                                </div>
                                <div class="field half first">
                                    @Html.LabelFor(m => m.FirstGotra)
                                    @Html.TextBoxFor(m => m.FirstGotra)
                                </div>
                                <div class="field half">
                                    @Html.LabelFor(m => m.SecondGotra)
                                    @Html.TextBoxFor(m => m.SecondGotra)
                                </div>

                                <div class="field half first">
                                    @Html.LabelFor(m => m.Gender)
                                    @Html.DropDownList("Gender", new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender", new { @class = "form-control" })
                                </div>
                                <div class="field half">
                                    @Html.LabelFor(m => m.Age)
                                    @Html.TextBoxFor(m => m.Age)
                                </div>

                                <div class="field half first">
                                    @Html.LabelFor(m => m.Height)
                                    @Html.DropDownListFor(model => model.Height, new SelectList(Enumerable.Range(40, 31).Select(x => x / 10F)), "Select Height", new { @class = "form-control" })
                                </div>
                                <div class="field half">
                                    @Html.LabelFor(m => m.Education)
                                    @Html.TextBoxFor(m => m.Education)
                                </div>

                                <div class="field half first">
                                    @Html.LabelFor(m => m.Occupation)
                                    @Html.TextBoxFor(m => m.Occupation)
                                </div>
                                <div class="field half">
                                    @Html.LabelFor(m => m.Address)
                                    @Html.TextBoxFor(m => m.Address)
                                </div>

                                <div class="field half first">
                                    @Html.LabelFor(m => m.ContactNumber)
                                    @Html.TextBoxFor(m => m.ContactNumber)
                                </div>
                                <div class="field half">
                                    @Html.LabelFor(m => m.AnubandhId)
                                    @Html.TextBoxFor(m => m.AnubandhId)
                                </div>

                                <div class="field">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email)
                                </div>

                                <ul class="actions">
                                    <li><a href="" class="button submit">Register</a></li>
                                </ul>
                            </form>
                        </section>
                        <section>
                            <ul class="contact">
                                <li>
                                    <h3>Having problem while registration? </h3>
                                    <span>Please feel free to contact<br />
                                        Audumber Kapratwar - 9423627171<br />
                                        Uday Gandhewar - 9850487387<br />
                                        Gajanan Daramwar - 0000000000
                                    </span>
                                </li>
                                <li>
                                    <h3>Email</h3>
                                    <a href="#">support@gmail.com</a>
                                </li>
                            </ul>
                        </section>
                    </div>
                </div>
            </section>
        }
    </div>

